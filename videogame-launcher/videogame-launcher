_bin="$( \
  dirname \
    "$( \
      command \
        -v \
	  "env")")"
_lib="${_bin}/../lib"
source \
  "${_lib}/libcrash-bash/crash-bash"

_usr_get() {
  local \
    _bin
  _bin="$( \
    dirname \
      "$(command \
           -v \
	   "env")")"
  dirname \
    "${_bin}"
}

_global_variables() {
  launch_date=""
  app_id=""
  game_launcher=""
  game_platform=""
  game_lang=""
  game_hud=""
  game_settings=""
  fullscreen_enabled=""
  color=""
  quiet=""
}

_requirements() {
  true
}

_duckstation_requirements() {
  _check_cmd \
    'duckstation-nogui' \
    'duckstation'
}

_pcsx2_requirements() {
  local \
    _pcsx2 \
    _pcsx2_pkgname
  # Maybe at some point Android
  # will be blessed with PlayStation 2
  # support.
  _pcsx2="$( \
    _pcsx2_auto_detect)"
  _pcsx2_pkgname="${_pcsx2}"
  if [[ "${_pcsx2}" == "PCSX2" ]]; then
    _pcsx2_pkgname="pcsx2"
  fi
  _check_cmd \
    "${_pcsx2}" \
    "${_pcsx2_pkgname}"
  if [[ ! -d "$(_usr_get)/share/ps2/bios" ]]; then
    _msg_error \
      "Please install 'ps2-bios'." \
      1
  fi
}

_pcsx2_auto_detect() {
  local \
    _cpuinfo \
    _pcsx2 \
    _sse3 \
    _sse4
  # Maybe at some point Android
  # will be blessed with PlayStation 2
  # support.
  _sse3="$( \
    cat \
      "/proc/cpuinfo" | \
      grep \
        "^flags" | \
        grep \
          "\bsse3\b")"
  _sse4="$( \
    cat \
      "/proc/cpuinfo" | \
      grep \
        "^flags" | \
        grep \
          "\bsse4\b")"
  if [[ "${_sse3}" == "" ]]; then
    _pcsx2="pcsx2-1.6"
  fi
  if [[ "${_sse3}" != "" ]]; then
    _pcsx2="pcsx2-1.7"
  fi
  if [[ "${_sse4}" != "" ]]; then
    _pcsx2="PCSX2"
  fi
  echo \
    "${_pcsx2}"
}

_fceux_requirements() {
  _check_cmd \
    'fceux'
}

_gearboy_requirements() {
  _check_cmd \
    'gearboy'
}

_mame_requirements() {
  _check_cmd \
    'mame'
}

_retroarch_requirements() {
  local \
    _os
  _os="$( \
    uname \
      -o)"
  if [[ "${_os}" == "Android" ]]; then
    _check_cmd \
      'su' \
      'tsu'
  elif [[ "${_os}" == "GNU/Linux" ]]; then
    _check_cmd \
      "retroarch"
  fi
}

_scummvm_requirements() {
  _check_cmd \
    'scummvm'
}

_game_dir_get() {
  local \
    _app_id="${1}" \
    _dir
  _dir="$( \
    _usr_get)/games/${_app_id}"
  echo \
    "${_dir}"
}

_game_path_get() {
  local \
    _app_id="${1}" \
    _lang="${2}" \
    _game_dir \
    _path
  _game_dir="$( \
    _game_dir_get \
      "${_app_id}")"
  _path="${_game_dir}/${_lang}"
  if [[ ! -d "${_path}" ]]; then
    if [[ ! -f "${_path}" ]]; then
      echo \
        "No support for language '${_lang}'"
      echo \
        "Running default language 'any'"
      _path="${_game_dir}/any"
    fi
    _game_path="$( \
      cat \
        "${_path}")"
  elif [[ -d "${_path}" ]]; then
    _game_path="${_path}"
  fi
  _game_path="$( \
    realpath \
      "${_game_path}")"
}

_duckstation_launch() {
  local \
    _app_id="${1}" \
    _lang="${2}" \
    _settings="${3}" \
    _fullscreen="${4}" \
    _duckstation_opts=() \
    _game_path \
    _msg=()
  _game_path_get \
    "${_app_id}" \
    "${_lang}"
  _msg_info \
    "Running '${_game_path}'."
  _duckstation_opts=(
    -settings
      "${_settings}"
  )
  if [[ "${_fullscreen}" == "y" ]]; then
    _duckstation_opts+=(
      -fullscreen
    )
  fi
  _msg=(
    "Running 'duckstation-nogui'"
    "with options '${_duckstation_opts[*]}'."
  )
  _msg_info \
    "${_msg[*]}"
  duckstation-nogui \
    "${_duckstation_opts[@]}" \
    "${_game_path}"
}

_pcsx2_launch() {
  local \
    _app_id="${1}" \
    _lang="${2}" \
    _settings="${3}" \
    _fullscreen="${4}" \
    _pcsx2_opts=() \
    _game_path \
    _pcsx2 \
    _pcsx2_ver \
    _game_dir \
    _settings_system \
    _config_dir_user \
    _cache_dir
  _cache_dir="${HOME}/.cache/${_app_id}"
  _config_dir_user="${HOME}/.config/${_app_id}"
  _pcsx2="$( \
    _pcsx2_auto_detect)"
  _pcsx2_ver="$( \
    basename \
      "${_pcsx2}")"
  _game_path_get \
    "${_app_id}" \
    "${_lang}"
  _msg_info \
    "Running '${_game_path}'."
  _game_dir="$( \
    dirname \
      "${_game_path}")"
  if [[ ! -d "${_config_dir_user}" ]]; then
    _msg=(
      "Creating game configuration."
    )
    _msg_info \
      "${_msg[*]}"
    _settings_system="${_game_dir}/inis"
    if [[ ! -d "${_settings_system}" ]]; then
      _msg=(
        "No game specific configuration"
        "files, using system defaults."
      )
      _msg_info \
        "${_msg[*]}"
      _settings_system="$( \
        _usr_get)/share/${app_name}/configs"
    fi
    mkdir \
      -p \
      "${_config_dir_user}"
    cp \
      -r \
      "${_settings_system}/"* \
      "${_config_dir_user}"
  fi
  _pcsx2_opts+=(
    --fullboot
    --nogui
  )
  if [[ ! -e "${_cache_dir}/bios" ]]; then
    mkdir \
      -p \
      "${_cache_dir}/bios"
    cp \
      "$(_usr_get)/share/ps2/bios/"* \
      "${_cache_dir}/bios"
  fi
  if [[ -e "${_config_dir_user}/${_pcsx2}" ]]; then
    _bios_file="ps2-0120e-20000902.bin"
    sed \
      -i \
      "s|%_bios_dir%|${_cache_dir}/bios|g" \
      "${_config_dir_user}/${_pcsx2}/PCSX2_ui.ini"
    sed \
      -i \
      "s|%_bios_file%|${_bios_file}|g" \
      "${_config_dir_user}/${_pcsx2}/PCSX2_ui.ini"
    _pcsx2_opts+=(
      --cfgpath
        "${_config_dir_user}/${_pcsx2}"
    )
  fi
  if [[ "${_fullscreen}" == "y" ]]; then
    _pcsx2_opts+=(
      --fullscreen
    )
  fi
  "${_pcsx2}" \
    "${_pcsx2_opts[@]}" \
    "${_game_path}"
}

_retroarch_launch() {
  local \
    _app_id="${1}" \
    _platform="${2}" \
    _lang="${3}" \
    _hud="${4}" \
    _os \
    _game_path \
    _cores_path \
    _platform_core_path \
    _cmd=()
  _os="$( \
    uname \
      -o)"
  _game_path_get \
    "${_app_id}" \
    "${_lang}"
  _msg_info \
    "Running '${_game_path}'."
  if [[ "${_os}" == "Android" ]]; then
    _cores_path="/data/user/0/com.retroarch/cores"
    if [[ "${_platform}" == "arcade" ]]; then
      _platform_core_path="${_cores_path}/mame2000_libretro_android.so"  
    elif [[ "${_platform}" == "mame2010" ]]; then
      _platform_core_path="${_cores_path}/mame2010_libretro_android.so"  
    elif [[ "${_platform}" == "nes" ]]; then
      _platform_core_path="${_cores_path}/quicknes_libretro_android.so"  
    elif [[ "${_platform}" == "nintendo64" ]]; then
      _platform_core_path="${_cores_path}/mupen64plus_next_gles2_libretro_android.so"  
    elif [[ "${_platform}" == "playstation" ]]; then
      _platform_core_path="${_cores_path}/pcsx_rearmed_libretro_android.so"  
    elif [[ "${_platform}" == "gameboy" ]]; then
      _platform_core_path="${_cores_path}/gearboy_libretro_android.so"  
    elif [[ "${_platform}" == "scummvm" ]]; then
      _platform_core_path="${_cores_path}/scummvm_libretro_android.so"  
    fi
    _cmd=(
      am
        start \
          -a
            'android.intent.action.MAIN'
          -n
            'com.retroarch/.browser.retroactivity.RetroActivityFuture'
          -e
            'ROM'
            "${_game_path}"
          -e
            'LIBRETRO'
            "${_platform_core_path}"  
    )
    if [[ "${_hud}" == "y" ]]; then
    _cmd+=(
      -e
        'CONFIGFILE'
        '/storage/emulated/0/Android/data/com.retroarch/files/retroarch.cfg'
    )
    fi
    su \
      -c \
        "${_cmd[*]}"
  elif [[ "${_os}" == "GNU/Linux" ]]; then
    retroarch \
      --libretro \
      "$(_usr_get)/lib/libretro/mupen64plus_next_libretro.so"
      "${_game_path}"
  fi
}

_mame_launch() {
  local \
    _app_id="${1}" \
    _lang="${2}" \
    _fullscreen="${3}" \
    _game_path \
    _mame_opts=()
  _game_path_get \
    "${_app_id}" \
    "${_lang}"
  if [[ "${_fullscreen}" == "n" ]]; then
    _mame_opts+=(
      -window
      -nomaximize
      -rompath
        "$(dirname \
             "${_game_path}")"
    )
  fi
  mame \
    "${_mame_opts[@]}" \
    "$(basename \
         "${_game_path}")"
}

_fceux_launch() {
  local \
    _app_id="${1}" \
    _lang="${2}" \
    _fullscreen="${3}" \
    _game_path \
    _fceux_opts=()
  _game_path_get \
    "${_app_id}" \
    "${_lang}"
  if [[ "${_fullscreen}" == "y" ]]; then
    _fceux_opts+=(
      --fullscreen
    )
  fi
  fceux \
    "${_fceux_opts[@]}" \
    "${_game_path}"
}

_gearboy_launch() {
  local \
    _app_id="${1}" \
    _lang="${2}" \
    _fullscreen="${3}" \
    _game_path \
    _gearboy_opts=()
  _game_path_get \
    "${_app_id}" \
    "${_lang}"
  if [[ "${_fullscreen}" == "y" ]]; then
    _gearboy_opts+=(
      # --fullscreen
    )
  fi
  gearboy \
    "${_gearboy_opts[@]}" \
    "${_game_path}"
}

_scummvm_launch() {
  local \
    _app_id="${1}" \
    _lang="${2}" \
    _settings="${3}" \
    _fullscreen="${4}" \
    _game_path \
    _scummvm_opts=()
  _game_path_get \
    "${_app_id}" \
    "${_lang}"
  if [[ "${_fullscreen}" == "y" ]]; then
    _scummvm_opts+=(
      -f
    )
  fi
  _scummvm_opts+=(
    --path="${_game_path}"
  )
  scummvm \
    "${_scummvm_opts[@]}" \
    "${_settings}"
}

_game_launcher_opts_get() {
  if [[ "${_game_launcher}" == "duckstation" ]]; then
    _launch_opts+=(
      "${_app_id}"
      "${_lang}"
      "${_settings}"
      "${_fullscreen}"
    )
  elif [[ "${_game_launcher}" == "pcsx2" ]]; then
    _launch_opts+=(
      "${_app_id}"
      "${_lang}"
      "${_settings}"
      "${_fullscreen}"
    )
  elif [[ "${_game_launcher}" == "retroarch" ]]; then
    _launch_opts+=(
      "${_app_id}"
      "${_game_platform}"
      "${_lang}"
      "${_hud}"
    )
  elif [[ "${_game_launcher}" == "fceux" ]]; then
    _launch_opts+=(
      "${_app_id}"
      "${_lang}"
      "${_fullscreen}"
    )
  elif [[ "${_game_launcher}" == "gearboy" ]]; then
    _launch_opts+=(
      "${_app_id}"
      "${_lang}"
      "${_fullscreen}"
    )
  elif [[ "${_game_launcher}" == "mame" ]]; then
    _launch_opts+=(
      "${_app_id}"
      "${_lang}"
      "${_fullscreen}"
    )
  elif [[ "${_game_launcher}" == "scummvm" ]]; then
    _launch_opts+=(
      "${_app_id}"
      "${_lang}"
      "${_settings}"
      "${_fullscreen}"
    )
  else
    _msg_error \
      "Unknown launcher '${_game_launcher}'." \
      1
  fi
}

_videogame_launcher() {
  local \
    _app_id="${1}" \
    _game_launcher="${2}" \
    _game_platform="${3}" \
    _lang="${4}" \
    _hud="${5}" \
    _settings="${6}" \
    _fullscreen="${7}" \
    _launch_opts=()
  "_${_game_launcher}_requirements"
  _game_launcher_opts_get
  "_${_game_launcher}_launch" \
    "${_launch_opts[@]}"
}

# Shows configuration options.
_show_config() {
  _msg_info "${app_name} configuration"
  _msg_info "              Launch date:   ${launch_date}"
  _msg_info "                   App ID:   ${app_id}"
  _msg_info "            Game launcher:   ${game_launcher}"
  _msg_info "            Game platform:   ${game_platform}"
  _msg_info "            Game language:   ${game_lang}"
  _msg_info "                 Game HUD:   ${game_hud}"
  _msg_info "            Game settings:   ${game_settings}"
  _msg_info "       Fullscreen enabled:   ${fullscreen_enabled}"
}

_usage() {
  local \
    _exit="${1}" \
    _usage_text
  IFS='' \
    read \
      -r \
      -d '' \
      _usage_text << \
        ENDUSAGETEXT || true

Seamlessly launch videogames.

Usage:
  ${app_name}
    <app_id>

  options:
     -e <game_launcher>     It can be 'duckstation',
                            'fceux', 'gearboy', 'mame',
                            'retroarch', 'pcsx2', 'scummvm'.
                            Default: ${game_launcher}
     -p <game_platform>     Game platform. It can be
                            'playstation', 'arcade',
			    'mame2010', 'nes', 'gameboy',
                            'playstation2', or 'scummvm'.
                            Default: ${game_platform}
     -l <game_lang>         Game languages.
                            Default: ${game_lang}
     -H                     Enables on-screen controller HUD.
                            Default: ${game_hud}
     -s <game_settings>     Depending on the selected game launcher
                            it can be a Duckstation settings file or
                            the name for a SCUMMVM game platform.
                            Default: ${game_settings}
     -f                     Launch the game in full-screen.
                            Default: ${fullscreen_enabled}

     -h                     This message.
     -c                     Enable color output
     -v                     Enable verbose output
ENDUSAGETEXT
  _printf \
    '%s\n' \
    "${_usage_text}"
  exit \
    "${_exit}"
}

_game_lang_auto_detect() {
  local \
    _uage \
    _lang
  _uage="${LANG%%.*}"
  _lang="${_uage%%_*}"
  _set_override \
    "game" \
    "lang" \
    "${_lang}"
}

_game_settings_auto_detect() {
  local \
    _launcher \
    _settings \
    _pcsx2
  _launcher="${game_launcher}"
  _settings=""
  if [[ "${_launcher}" == "duckstation" ]]; then
    _settings="$( \
      _usr_get)/games/${app_id}/${app_id}.settings.ini"
  elif [[ "${_launcher}" == "pcsx2" ]]; then
    _pcsx2="$( \
      _pcsx2_auto_detect)"
    _settings="${HOME}/.config/${app_id}/${_pcsx2}"
  fi
  _set_override \
    "game" \
    "settings" \
    "${_settings}"
  _set_override \
    "fullscreen" \
    "enabled" \
    "n"
}

_game_launcher_auto_detect() {
  local \
    _game_platform \
    _launcher \
    _os \
    _msg=()
  _os="$( \
    uname \
      -o)"
  _game_platform=""
  if [[ -v "override_game_platform" ]]; then
    _game_platform="${override_game_platform}"
  fi
  _launcher=""
  _msg=(
    "Detecting game launcher"
    "for platform '${_game_platform}'."
  )
  _msg_info \
    "${_msg[*]}"
  if [[ "${_os}" == "Android" ]]; then
    _launcher="retroarch"
  elif [[ "${_os}" == "GNU/Linux" ]]; then
    _launcher="duckstation"
    if [[ "${_game_platform}" == "arcade" ]]; then
      _launcher="mame"
    elif [[ "${_game_platform}" == "gameboy" ]]; then
      _launcher="gearboy"
    elif [[ "${_game_platform}" == "playstation2" ]]; then
      _launcher="pcsx2"
    fi
  fi
  _set_override \
    "game" \
    "launcher" \
    "${_launcher}"
}

_retroarch_platform_auto_detect() {
  local \
    _game_path \
    _game_lang
  _game_lang="${game_lang}"
  if [[ -v "override_game_lang" ]]; then
    _game_lang="${override_game_lang}"
  fi
  _msg_info \
    "Retroarch platform auto-detect."
  _game_path_get \
      "${app_id}" \
      "${_game_lang}"
  _msg_info \
    "Game path: ${_game_path}."
  if [[ "${_game_path}" == *".nes" ]]; then
    _platform="nes"
  elif [[ "${_game_path}" == *".gbc" || \
	  "${_game_path}" == *".gb" ]]; then
    _platform="gameboy"
  elif [[ "${_game_path}" == *".bin" || \
	  "${_game_path}" == *".cue" ]]; then
    _platform="playstation"
  elif [[ "${_game_path}" == *".iso" ]]; then
    _platform="playstation2"
  elif [[ -d "${_game_path}" ]]; then
    _platform="scummvm"
  fi
}

_game_platform_auto_detect() {
  local \
    _platform
  _platform=""
  if [[ "${game_launcher}" == "duckstation" ]]; then
    _platform="playstation"
  elif [[ "${game_launcher}" == "fceux" ]]; then
    _platform="nes"
  elif [[ "${game_launcher}" == "gearboy" ]]; then
    _platform="gameboy"
  elif [[ "${game_launcher}" == "mame" ]]; then
    _platform="arcade"
  elif [[ "${game_launcher}" == "retroarch" ]]; then
    _retroarch_platform_auto_detect
  elif [[ "${game_launcher}" == "$(_lower \
	                             "pcsx2")"* ]]; then
    _platform="playstation2"
  elif [[ "${game_launcher}" == "scummvm" ]]; then
    _platform="scummvm"	
  fi
  _set_override \
    "game" \
    "platform" \
    "${_platform}"
}

_game_hud_auto_detect() {
  local \
    _os \
    _game_hud
  _os="$( \
    uname \
      -o)"
  _game_hud="n"
  if [[ "${_os}" == "Android" ]]; then
    _game_hud="y"
  fi
  _set_override \
    "game" \
    "hud" \
    "${_game_hud}"
}

_set_overrides() {
  local \
    _app_id
  _app_id="${app_id}"
  if [[ -v override_quiet ]]; then
    quiet="${override_quiet}"
  elif [[ -z "${quiet}" ]]; then
    quiet="y"
  fi
  if [[ -v override_color ]]; then
    color="${override_color}"
  elif [[ -z "${color}" ]]; then
    color="n"
  fi
  _set_override \
    "launch" \
    "date" \
    "$(_get_date_human)"
  _game_launcher_auto_detect
  _game_platform_auto_detect
  _game_lang_auto_detect
  _game_hud_auto_detect
  _game_settings_auto_detect
}

_globals
_global_variables
_requirements
while \
  getopts \
    'e:p:l:H:s:cvh?' \
    arg; do
  case \
    "${arg}" in
    e) override_game_launcher="${OPTARG}" ;;
    p) override_game_platform="${OPTARG}" ;;
    l) override_game_lang="${OPTARG}" ;;
    H) override_game_hud="y" ;;
    s) override_game_settings="${OPTARG}" ;;
    f) override_fullscreen_enabled="y" ;;
    c) override_color="y" ;;
    v) override_quiet="n" ;;
    h|?) _set_overrides && \
         _usage \
           0 ;;
    *)
    _msg_error \
      "Invalid argument '${arg}'" \
      0
    _usage \
      1
    ;;
  esac
done
shift \
  $(( \
    OPTIND - 1 \
  ))
if (( $# < 1 )); then
  _msg_error \
    "No app id given." \
    0
  _set_overrides
  _usage \
    1
fi
if (( 0 < $# )); then
  _set \
    "app" \
    "id" \
    "${1}"
fi
_set_overrides
_show_config
app_opts=(
  "${app_id}"
  "${game_launcher}"
  "${game_platform}"
  "${game_lang}"
  "${game_hud}"
  "${game_settings}"
  "${fullscreen_enabled}"
)
_videogame_launcher \
  "${app_opts[@]}"
